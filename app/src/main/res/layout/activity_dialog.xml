<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/grey_font">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flBackground"
        android:padding="3dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tracking_image"
            android:scaleType="fitXY"
            android:alpha="0.4"/>
    </FrameLayout>
    <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:loader_animDur="400"
        app:loader_noOfDots="3"
        app:loader_circleRadius="15dp"
        app:loader_defaultColor="@color/blue2"
        app:loader_selectedColor="@color/white"
        app:loader_dotsDist="10dp"
        app:loader_expandOnSelect="false"
        app:loader_isSingleDir="true"
        app:loader_selectedRadius="10dp"
        app:loader_showRunningShadow="false"
        app:loader_firstShadowColor="@color/white"
        app:loader_secondShadowColor="@color/blue2"/>
</RelativeLayout>